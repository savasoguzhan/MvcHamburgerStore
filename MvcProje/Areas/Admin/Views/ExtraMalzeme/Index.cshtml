@using MvcProje.Areas.Identity.Data.Classes;
@model List<ExtraMalzeme>

<div class="container p-3">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>Price</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ad</td>
                        <td>@item.Fiyat</td>

                        <td>
                            <img height="60px" width="60px" alt="resim yok" src="~/img/@item.Resim">
                        </td>
                        <td> <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-trash3-fill"></i> DELETE</a> </td>
                        <td> <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">  <i class="bi bi-arrow-down-up"></i> UPDATE</a> </td>
                        <td></td>
                    </tr>

                }
            }
        </tbody>

    </table>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Yeni Extra Malzeme Ekle</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="ExtraMalzeme" asp-action="Ekle" class="btn btn-outline-info">EKLE</a>
        </div>

    </div>

</div>