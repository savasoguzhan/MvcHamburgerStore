@using MvcProje.Areas.Identity.Data.Classes;
@model IEnumerable<Menu>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<div class="row pb-3">
    @foreach (var item in Model)
    {

        <div class="col-lg-3 col-md-6">

            <div class="row p-2">

                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px">

                    <div class="card">
                        <img alt="resim yok" src="~/img/@item.Resim" class="card-img-top rounded">

                        <div class="pl-1">
                            <p class="card-title h5 text-primary">
                                @item.MenuAd
                            </p>

                        </div>

                        <div class="p-1">
                            <p>Fiyat : <b>₺@item.MenuFiyat.ToString("0.00")</b></p>

                        </div>
                        
                            <div>
                            <a asp-action="Yummy" asp-route-id="@item.Id" class="btn btn-warning"> <i class="bi bi-bag-plus-fill"></i> Yummy... </a>
                            </div>

                    </div>

                </div>
            </div>

        </div>
    }

</div>

<div class="d-flex">
    <a asp-action="ExtraMalzeme">Extra Malzemeler Icin Tiklayniz</a>
    <div class="text-end">
        <button asp-controller="Sepet" asp-action="Index" class="btn btn-success"> CheckOut </button>
    </div>
    
</div>
